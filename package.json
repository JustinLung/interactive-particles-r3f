{
  "name": "nextcalibur",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "npm": "please use yarn",
    "node": "18"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "postinstall": "husky install",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "format": "prettier --write './src/**/*'",
    "component": "node scripts/component",
    "icon": "svgr src/icons --index-template src/icons/index-template.js --config-file .svgr.config.js --out-dir src/components/icons",
    "generate-graphql": "graphql-codegen -r dotenv/config",
    "watch-graphql": "graphql-codegen --watch -r dotenv/config",
    "test:lighthouse": "yarn run build && lhci autorun"
  },
  "lint-staged": {
    "**/*.(js|ts|tsx)": [
      "eslint --fix"
    ],
    "**/*.(js|json|ts|tsx)": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@types/node": "20.2.3",
    "@types/react": "18.2.7",
    "@types/react-dom": "18.2.4",
    "dotenv": "^16.0.3",
    "eslint": "8.41.0",
    "eslint-config-next": "13.4.3",
    "framer-motion": "^10.12.16",
    "graphql": "^16.6.0",
    "graphql-codegen-plugin-typescript-swr": "0.8.3",
    "graphql-request": "5.1.0",
    "husky": "^8.0.3",
    "next": "13.4.3",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-use": "^17.4.0",
    "typescript": "5.0.4",
    "zustand": "^4.3.8"
  },
  "devDependencies": {
    "@csstools/postcss-global-data": "^1.0.3",
    "@graphql-codegen/cli": "2.16.4",
    "@graphql-codegen/introspection": "^2.2.3",
    "@graphql-codegen/schema-ast": "^2.6.1",
    "@graphql-codegen/typescript": "3.0.0",
    "@graphql-codegen/typescript-graphql-request": "^4.5.8",
    "@graphql-codegen/typescript-operations": "3.0.0",
    "@lhci/cli": "^0.12.0",
    "@lhci/server": "^0.12.0",
    "@studio-freight/lenis": "^1.0.12",
    "@svgr/cli": "^8.0.1",
    "autoprefixer": "^10.4.14",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "postcss-custom-media": "^9.1.3",
    "postcss-nested": "^6.0.1",
    "postcss-preset-env": "^8.4.1",
    "postcss-utilities": "^0.8.4",
    "prettier": "^3.0.1",
    "ts-node": "^10.9.1"
  }
}
